name: Docker Series Builds1

on: [push]

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v2
    - name: docker login
      env:
        DOCKER_USER: ${{ secrets.DOCKER_USER }}   
        DOCKER_PASSWORD: ${{ secrets.DOCKER_PASSWORD }}  
      run: |
        docker login -u $DOCKER_USER -p $DOCKER_PASSWORD
    - name: docker build csharp
      run: |
        docker build ./c# -t vevu888/csharp:1.0.0
    - name: docker build nodejs
      run: |
        docker build ./nodejs -t vevu888/nodejs:1.0.0
    - name: docker build python
      run: |
        docker build ./python -t vevu888/python:1.0.
    - name: docker push
      run: |
        docker push vevu888/csharp:1.0.0
        docker push vevu888/nodejs:1.0.0
        docker push vevu888/python:1.0.0
